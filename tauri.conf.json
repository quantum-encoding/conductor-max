{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Conductor Max",
  "version": "0.1.0",
  "identifier": "com.quantumencoding.conductormax",
  "build": {
    "frontendDist": "./ui"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "ðŸ”± Conductor Max - AI Orchestration Platform",
        "width": 1600,
        "height": 1000,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "center": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Main window capabilities",
          "windows": ["main"],
          "permissions": [
            "core:default",
            "core:event:allow-listen",
            "core:event:allow-emit",
            "shell:allow-open",
            "shell:allow-spawn"
          ]
        }
      ],
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "./icons/icon.png"
    ],
    "resources": [],
    "externalBin": [],
    "copyright": "Â© 2024 Quantum Encoding Ltd",
    "category": "DeveloperTool",
    "shortDescription": "Orchestrate multiple AI coding agents",
    "longDescription": "Premium AI orchestration platform for managing multiple coding assistants"
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}